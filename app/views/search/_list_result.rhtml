<div class='listresult'>
<% number_of_future_talks = Talk.count(:distinct => true, :select => 'talk_id', :joins => "INNER JOIN list_talks ON talks.id = list_talks.talk_id", :conditions => ['(list_talks.list_id = ?) AND (start_time >= ?)', list_result.id, @time_at_beginning_of_day ] ) %>
<%= link_to list_result.name, list_url(:id => list_result) %> <span class='count'>&#8211; <%= list_result.upcoming_talks_count %> upcoming talks.</span>
</div>
